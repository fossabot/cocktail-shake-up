{
  "name": "cocktail-shake-up",
  "version": "0.1.1",
  "private": true,
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.2",
    "babel-jest": "^19.0.0",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.4.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-runtime": "^6.20.0",
    "case-sensitive-paths-webpack-plugin": "^2.0.0",
    "css-loader": "^0.28.0",
    "enzyme": "^2.8.2",
    "eslint": "^3.19.0",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-flowtype": "^2.32.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jest": "^19.0.1",
    "eslint-plugin-jsx-a11y": "4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "flow-bin": "^0.44.2",
    "html-webpack-plugin": "^2.28.0",
    "immutable": "^3.8.1",
    "jest": "^19.0.2",
    "json-loader": "0.5.4",
    "localforage": "^1.5.0",
    "netlify-cli": "^1.2.2",
    "postcss-loader": "^1.3.3",
    "prop-types": "^15.5.8",
    "react": "^15.5.4",
    "react-addons-test-utils": "^15.5.1",
    "react-dev-utils": "^0.5.2",
    "react-dom": "^15.5.4",
    "react-helmet": "^5.0.3",
    "react-redux": "^5.0.4",
    "react-router-dom": "^4.1.1",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0",
    "style-loader": "^0.16.1",
    "url-loader": "^0.5.8",
    "wdio-concise-reporter": "^0.1.2",
    "wdio-mocha-framework": "^0.5.9",
    "wdio-sauce-service": "^0.3.1",
    "wdio-selenium-standalone-service": "^0.0.8",
    "webdriverio": "^4.6.2",
    "webpack": "^2.4.1",
    "webpack-dashboard": "^0.3.0",
    "webpack-dev-server": "^2.4.2"
  },
  "scripts": {
    "build": "webpack --colors --config config/webpack.config.prod.js",
    "deploy": "netlify --access-token $NETLIFY_SECRET deploy",
    "lint": "eslint '+(src|test|webdriver)/**/*.js' --fix",
    "sauce": "wdio webdriver/wdio.sauce.js",
    "start": "webpack-dev-server --config config/webpack.config.dev.js",
    "test": "jest",
    "webdriver": "wdio webdriver/wdio.conf.js"
  },
  "babel": {
    "plugins": [
      "transform-runtime",
      "transform-class-properties",
      "transform-object-rest-spread"
    ],
    "presets": [
      "env",
      "flow",
      "react"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:flowtype/recommended",
      "plugin:jest/recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:react/recommended"
    ],
    "env": {
      "browser": true,
      "es6": true,
      "jest": true,
      "node": true
    },
    "globals": {
      "browser": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true,
        "impliedStrict": true,
        "jsx": true
      },
      "ecmaVersion": 7,
      "sourceType": "module"
    },
    "plugins": [
      "flowtype",
      "jest",
      "jsx-a11y",
      "import",
      "react"
    ],
    "rules": {
      "import/no-named-as-default": 0,
      "debugger": 0,
      "no-console": 0,
      "no-debugger": 0,
      "comma-dangle": [
        "error",
        {
          "arrays": "only-multiline",
          "objects": "always",
          "imports": "only-multiline",
          "functions": "only-multiline"
        }
      ],
      "key-spacing": [
        "error",
        {
          "afterColon": true,
          "beforeColon": false,
          "align": "value",
          "mode": "strict"
        }
      ],
      "max-len": [
        "warn",
        120
      ],
      "no-var": "error",
      "object-curly-spacing": [
        "warn",
        "always"
      ],
      "object-property-newline": "error",
      "prefer-const": "error",
      "semi": [
        "error",
        "always"
      ]
    }
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](docs|node_modules|webdriver)[/\\\\]"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.js$"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost"
  }
}
